{
    "type": "object",
    "title": "IggyConfig",
    "properties": {
        "endpoint": {
            "type": "string",
            "title": "Endpoint",
            "description": "The Apache Iggy server endpoint (e.g., 'localhost:8090')",
            "examples": [
                "localhost:8090"
            ]
        },
        "transport": {
            "type": "string",
            "title": "Transport Protocol",
            "description": "The transport protocol to use for connecting to Iggy",
            "enum": [
                "tcp",
                "quic",
                "http"
            ],
            "default": "tcp"
        },
        "authentication": {
            "type": "object",
            "oneOf": [
                {
                    "type": "object",
                    "title": "None",
                    "properties": {},
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "title": "Username/Password",
                    "properties": {
                        "username": {
                            "title": "Username",
                            "type": "string",
                            "description": "Username for authentication"
                        },
                        "password": {
                            "title": "Password",
                            "type": "string",
                            "description": "Password for authentication",
                            "format": "var-str"
                        }
                    },
                    "required": [
                        "username",
                        "password"
                    ],
                    "sensitive": [
                        "password"
                    ]
                }
            ]
        }
    },
    "required": [
        "endpoint",
        "transport",
        "authentication"
    ]
}